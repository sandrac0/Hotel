@model hotelvm
@using Hotel.Domain.Entities
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Clientes</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">

            @*  <div class="form-floating py-1 col-12">
            <input asp-for="@Model.Id" class="form-control border shadow" />
            <label asp-for="Id" class="ms-2"></label>
            <span asp-validation-for="Id" class="text-danger"></span>
            </div> *@
            <div class="form-floating py-1 col-12">
                <input asp-for="clientes.Id" class="form-control border shadow" />
                <label asp-for="clientes.Id" class="ms-2"></label>
                <span asp-validation-for="clientes.Id" class="text-danger"></span>
            </div>
            <div class="form-floating py-1 col-12">
                <input asp-for="clientes.Name" class="form-control border shadow" />
                <label asp-for="clientes.Name" class="ms-2"></label>
                <span asp-validation-for="clientes.Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-1 col-12">
                <select asp-for="@Model.clientes.QuartosId" asp-items="@Model.quartosList"
                        class="form-select border shadow">
                    <option disabled selected> --Select a Fabric--</option>
                </select>
                <label asp-for="clientes!.QuartosId" class="ms-2"></label>
                <span asp-validation-for="clientes!.QuartosId!" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-circle"></i>Submit
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}